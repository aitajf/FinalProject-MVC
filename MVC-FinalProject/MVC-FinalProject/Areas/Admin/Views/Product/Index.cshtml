@model PaginationResponse<Product>

<div class="main-panel">
    <div class="content-wrapper" style="width: 65pc;">
        <div class="card-body">
            <h4 class="card-title" style="font-size: 31px; margin-left: 25pc;">Blog Post:</h4>
            <div class="table-responsive">
                <a asp-action="Create" class="btn btn-outline-info mt-4 mb-4">Create</a>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> Image </th>
                            <th> Name </th>
                            <th> Description </th>
                            <th> Brand </th>
                            <th> Category </th>
                            <th> Price </th>
                            <th> Operations </th>
                        </tr>
                    </thead>
                    <tbody>

                        @{
                            int totalCount = ViewBag.TotalCount ?? 0;
                            bool isSuperAdmin = User.IsInRole("SuperAdmin");
                        }

                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td><img src="@item.MainImage" style="width:100px" alt=""></td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Brand</td>
                                <td>@item.Category</td>
                                <td>@item.Price</td>


                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-secondary">Detail</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Edit</a>
                                    @if (totalCount > 1 || isSuperAdmin)
                                    {
                                        <form class="d-inline" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageIndex - 1)">Previous</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <a class="page-link">Previous</a>
                            </li>
                        }

                        @for (var i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                            </li>
                        }

                        @if (Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageIndex + 1)">Next</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <a class="page-link">Next</a>
                            </li>
                        }
                    </ul>
                </nav>
          
            </div>
        </div>

    </div>
</div>

