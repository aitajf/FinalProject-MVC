                    <label asp-for="UploadImages" class="form-label">Product Images</label>
                    <input asp-for="UploadImages" type="file" class="form-control" multiple />
                    <span asp-validation-for="UploadImages" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">Create</button>
            </form>
