@model ProductCreate

<div class="main-panel">
    <div class="content-wrapper" style="width: 65pc;">
        <div class="container" style="margin-top: 100px; margin-left: 320px; width: 400px;">
            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Stock" class="form-label"></label>
                    <input asp-for="Stock" type="number" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryId">Category</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                        <option disabled selected>Select a category</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BrandId">Brand</label>
                    <select asp-for="BrandId" asp-items="ViewBag.Brands" class="form-control">
                        <option disabled selected>Select a brand</option>
                    </select>
                    <span asp-validation-for="BrandId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ColorIds">Colors</label>
                    <select asp-for="ColorIds" asp-items="ViewBag.Colors" class="form-control" multiple id="ColorIds">
                    </select>
                    <span asp-validation-for="ColorIds" class="text-danger"></span>
                </div>

                <!-- Burada şəkillər dinamik şəkildə əlavə olunacaq -->
                <div id="colorImageContainer"></div>


                <div class="form-group">
                    <label asp-for="TagIds">Tags</label>
                    <select asp-for="TagIds" asp-items="ViewBag.Tags" class="form-control" multiple>
                    </select>
                    <span asp-validation-for="TagIds" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Images" class="form-label">Product Images</label>
                    <input asp-for="Images" type="file" class="form-control" multiple />
                    <span asp-validation-for="Images" class="text-danger"></span>
                </div>

                @* <div class="mb-3"> *@
                @*     <label asp-for="ColorImages" class="form-label">Color Images</label> *@
