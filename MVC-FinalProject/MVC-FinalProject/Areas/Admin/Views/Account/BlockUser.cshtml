@model BlockUser

<div class="main-panel">
    <div class="content-wrapper" style="width: 65pc;">
<div class="container mt-5" style="max-width: 500px;">
    <h2>Block User</h2>
    <form asp-action="BlockUser" method="post">
        <div class="form-group">
            <label asp-for="Username"></label>
            <select asp-for="Username" class="form-control" asp-items="ViewBag.Users">
                <option value="" disabled selected > Select User </option>
            </select>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BlockDurationMinutes"></label>
            <input asp-for="BlockDurationMinutes" type="number" class="form-control" />
            <span asp-validation-for="BlockDurationMinutes" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-danger">Block User</button>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info mt-3">@ViewBag.Message</div>
    }
</div>

</div>
</div>
