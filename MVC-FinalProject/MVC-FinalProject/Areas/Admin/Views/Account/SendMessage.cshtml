@model AdminMessage

<div class="main-panel">
    <div class="content-wrapper" style="width: 65pc;">
        <div class="container" style="margin-top:100px;margin-left:320px;width: 400px;">
            <h2>Send Message to Admin</h2>
            <form asp-action="SendMessage" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <select asp-for="Email" class="form-control" asp-items="ViewBag.AdminEmails">
                       
                    </select>
                </div>
                <div class="form-group">
                    <label>Subject</label>
                    <input asp-for="Subject" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Message</label>
                    <textarea asp-for="Body" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-success">Send</button>
            </form>
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info mt-3">@ViewBag.Message</div>
            }
        </div>
    </div>
</div>
