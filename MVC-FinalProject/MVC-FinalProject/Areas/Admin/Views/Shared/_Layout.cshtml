<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>JF</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <link rel="stylesheet" href="~/admin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/admin/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/admin/assets/vendors/jvectormap/jquery-jvectormap.css">
    <link rel="stylesheet" href="~/admin/assets/vendors/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/admin/assets/vendors/owl-carousel-2/owl.carousel.min.css">
    <link rel="stylesheet" href="~/admin/assets/vendors/owl-carousel-2/owl.theme.default.min.css">

    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/admin/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/admin/assets/images/favicon.png" />
</head>
<body>
    <div class="container-scroller">
        <!-- partial:partials/_sidebar.html -->
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <div class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top">
                <a class="sidebar-brand brand-logo" asp-area="Admin" asp-controller="Dashboard" asp-action="Index" style="text-decoration:none; font-size: 40px; color: #124470;">JetFrame</a>
                <a class="sidebar-brand brand-logo-mini" asp-area="Admin" asp-controller="Dashboard" asp-action="Index" style="color: #124470; text-decoration:none;">JF</a>
            </div>
            <ul class="nav">



                <li class="nav-item nav-category">
                    <span class="nav-link" style="margin-left: 11px; font-size: 21px; display: flex; gap: 10px;">
                        <i class="fas fa-tools"></i> Admin Hub
                    </span>
                </li>

                <li class="nav-item menu-items">
                    <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <span class="menu-icon">
                            <i class="mdi mdi-speedometer"></i>
                        </span>
                        <span class="menu-title">Dashboard</span>
                    </a>
                </li>

                @if (User.IsInRole("SuperAdmin"))
                {
                    <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="Review" asp-action="Index">Review</a></li>
                    <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="Subscription" asp-action="Index">Subscribe</a></li>
                    <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="AskUsFrom" asp-action="Index">Message</a></li>
                    <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="Account" asp-action="Index">Users</a></li>
                }
                <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="Slider" asp-action="Index">Slider</a></li>
                <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a></li>
                <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="LandingBanner" asp-action="Index">Landing Banner</a></li>
                <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="Instagram" asp-action="Index">Instagram</a></li>
                <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="SubscribeImg" asp-action="Index">Subscribe Image</a></li>
                <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="Brand" asp-action="Index">Brand</a></li>
                <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="Color" asp-action="Index">Color</a></li>
                <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="Tag" asp-action="Index">Tag</a></li>
                <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="BlogCategory" asp-action="Index">Blog Category</a></li>
                <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="BlogPost" asp-action="Index">Blog Post</a></li>
                <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="Product" asp-action="Index">Product</a></li>
                <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="AboutPromo" asp-action="Index">About Promo</a></li>
                <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="HelpSection" asp-action="Index">HelpSection</a></li>
                <li class="nav-item"> <a class="nav-link" asp-area="Admin" asp-controller="AboutBannerImg" asp-action="Index"> About Banner Image  </a></li>


            </ul>
                <style>
                    /* Admin Panel Navigation - Dark Theme */
                    .admin-nav-container {
                        padding: 0;
                        margin: 0;
                    }

                    /* SuperAdmin Contact Message */
                    .admin-contact-link {
                        text-decoration: none;
                        display: block;
                        padding: 0;
                    }

                    .admin-message-box {
                        background: linear-gradient(135deg, #181e3f 0%, #000000 100%);
                        border-radius: 8px;
                        padding: 12px 16px;
                        display: flex;
                        align-items: center;
                        gap: 12px;
                        transition: all 0.3s ease;
                        box-shadow: 0 2px 8px rgb(0 0 0 / 20%);
                        border: 1px solid rgb(19 11 245 / 14%);
                    }

                        .admin-message-box:hover {
                            transform: translateY(-1px);
                            box-shadow: 0 4px 12px rgb(11 153 245 / 92%);
                            background: linear-gradient(135deg, #1112c9 0%, #1c2b79 100%);
                        }

                    .message-icon {
                        background: rgba(255, 255, 255, 0.2);
                        width: 32px;
                        height: 32px;
                        border-radius: 6px;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        color: white;
                        font-size: 14px;
                        flex-shrink: 0;
                    }

                    .message-content {
                        display: flex;
                        flex-direction: column;
                        gap: 2px;
                    }

                    .message-text {
                        color: rgba(255, 255, 255, 0.9);
                        font-size: 13px;
                        font-weight: 500;
                        line-height: 1.2;
                    }

                    .message-action {
                        color: white;
                        font-size: 14px;
                        font-weight: 600;
                        text-decoration: underline;
                        text-underline-offset: 2px;
                    }

                    /* Search Form */
                    .admin-search-form {
                        width: 100%;
                    }

                    .search-wrapper {
                        position: relative;
                        display: flex;
                        align-items: center;
                        background: #374151;
                        border: 1px solid #4b5563;
                        border-radius: 8px;
                        overflow: hidden;
                        transition: all 0.3s ease;
                    }

                        .search-wrapper:focus-within {
                            border-color: #3b82f6;
                            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
                        }

                    .search-icon {
                        color: #9ca3af;
                        font-size: 14px;
                        padding: 0 12px;
                        pointer-events: none;
                    }

                    .search-input {
                        background: transparent;
                        border: none;
                        color: #f3f4f6;
                        font-size: 14px;
                        padding: 10px 0;
                        flex: 1;
                        outline: none;
                    }

                        .search-input::placeholder {
                            color: #9ca3af;
                        }

                    .search-submit {
                        background: #3b82f6;
                        border: none;
                        color: white;
                        padding: 10px 12px;
                        cursor: pointer;
                        transition: background-color 0.2s ease;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                    }

                        .search-submit:hover {
                            background: #2563eb;
                        }

                        .search-submit i {
                            font-size: 12px;
                        }

                    /* Responsive adjustments */

                    .message-icon {
                        width: 28px;
                        height: 28px;
                        font-size: 12px;
                    }

                    .message-text {
                        font-size: 12px;
                    }

                    .message-action {
                        font-size: 13px;
                    }

                    .search-input {
                        font-size: 13px;
                        padding: 8px 0;
                    }

                    .search-submit {
                        padding: 8px 10px;
                    }


                    /* Animation for smooth transitions */
                    .fade-in {
                        animation: fadeInUp 0.3s ease-out;
                    }



                    to {
                        opacity: 1;
                        transform: translateY(0);
                    }

                </style>


                <div class="admin-nav-container">
                    <ul class="navbar-nav w-100">
                        <li class="nav-item w-100">
                            <!-- SuperAdmin view -->
                            <div id="superAdminView" class="@(User.IsInRole("SuperAdmin") ? "" : "d-none")">
                                <a class="nav-link admin-contact-link" href="@Url.Action("SendMessage", "Account")">
                                    <div class="admin-message-box">
                                        <div class="message-icon">
                                            <i class="fas fa-user-shield"></i>
                                        </div>
                                        <div class="message-content">
                                            <span class="message-text">Need Admin ?</span>
                                            <span class="message-action">Send message</span>
                                        </div>
                                    </div>
                                </a>
                            </div>

                            <!-- Regular user view -->
                            <div id="regularUserView" class="@(User.IsInRole("SuperAdmin") ? "d-none" : "")">
                                <form class="admin-search-form" action="@Url.Action("Search", "Products")" method="get">
                                    <div class="search-wrapper">
                                        <i class="fas fa-search search-icon"></i>
                                        <input type="text" name="query" class="search-input" placeholder="Search products...">
                                        <button type="submit" class="search-submit">
                                            <i class="fas fa-arrow-right"></i>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </li>
                    </ul>
                </div>



            </ul>
        </nav>
        <div class="container-fluid page-body-wrapper">
            <nav class="navbar p-0 fixed-top d-flex flex-row">
                <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
                    <a class="navbar-brand brand-logo-mini" href="index.html"><img src="~/admin/assets/images/logo-mini.svg" alt="logo" /></a>
                </div>
                <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
                    <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                        <span class="mdi mdi-menu"></span>
                    </button>
                    <div class="admin-panel-nav-container">

                        <button type="button" class="btn btn-primary btn-rounded btn-icon" style="margin-left: 57pc;">
                        <a asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="mdi mdi-home-outline" style="color: black;padding: 13px;"></i>
                        </a>
                    </button>


                    <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                        <span class="mdi mdi-format-line-spacing"></span>
                    </button>
                </div>
            </nav>
        </div>
        <!-- page-body-wrapper ends -->
        @RenderBody()

        <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
                <span class="text-muted d-block text-center text-sm-left d-sm-inline-block"></span>
                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"></span>
            </div>
        </footer>

    </div>
    <script src="~/admin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/admin/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="~/admin/assets/vendors/progressbar.js/progressbar.min.js"></script>
    <script src="~/admin/assets/vendors/jvectormap/jquery-jvectormap.min.js"></script>
    <script src="~/admin/assets/vendors/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/admin/assets/vendors/owl-carousel-2/owl.carousel.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/admin/assets/js/off-canvas.js"></script>
    <script src="~/admin/assets/js/hoverable-collapse.js"></script>
    <script src="~/admin/assets/js/misc.js"></script>
    <script src="~/admin/assets/js/settings.js"></script>
    <script src="~/admin/assets/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="~/admin/assets/js/dashboard.js"></script>
    <script src="~/assets/js/custom.js"></script>

    <!-- End custom js for this page -->
</body>
</html>