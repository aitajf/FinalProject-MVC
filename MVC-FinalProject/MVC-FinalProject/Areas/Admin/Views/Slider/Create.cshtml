@model SliderCreate

<div class="main-panel">
	<div class="content-wrapper" style="width: 65pc;">
		<div class="container"  style="margin-top:100px;margin-left:320px;width: 400px;">
			<form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
				<div class="form-group">
					<label for="category"> Image</label>
					<input asp-for="Image" class="form-control" id="inputText" maxlength="1000">
					<span class="text-danger" asp-validation-for="Image"></span> <br />

					<label for="category">Title</label>
					<input asp-for="Title" class="form-control" id="inputText" maxlength="1000" oninput="this.value = this.value.replace(/[0-9]/g, '')" />
					<span class="text-danger" asp-validation-for="Title"></span>

					<label for="category">Description</label>
					<input asp-for="Description" class="form-control" id="inputText" maxlength="1000" oninput="this.value = this.value.replace(/[0-9]/g, '')" />
					<span class="text-danger" asp-validation-for="Description"></span>

				</div>
				<button type="submit" class="btn btn-primary me-2">Submit</button>
				<a asp-action="Index" class="btn btn-outline-primary mt-3" style="margin-bottom: 1pc;">← Back</a>
			</form>
		</div>

	</div>
</div>