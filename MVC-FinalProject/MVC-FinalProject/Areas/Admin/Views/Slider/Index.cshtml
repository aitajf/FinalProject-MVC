@model IEnumerable<Slider>

<div class="main-panel">
    <div class="content-wrapper" style="width: 65pc;">
        <div class="card-body">
            <h4 class="card-title" style="font-size: 31px; margin-left: 25pc;">Slider:</h4>
            <div class="table-responsive">
                <a asp-action="Create" class="btn btn-outline-info mt-4 mb-4">Create</a>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> Image </th>
                            <th> Title </th>
                            <th> Description </th>
                            <th> Operations </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> <img src="@item.Image" style="width: 200px; height: 180px" /> </td>
                                <td> @item.Title </td>
                                <td> @item.Description </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-secondary">Detail</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Edit</a>
                                    <form class="d-inline" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

