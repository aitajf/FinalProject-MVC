@model BlogCategoryCreate

<div class="main-panel">
	<div class="content-wrapper" style="width: 65pc;">
		<div class="container" style="margin-top:100px;margin-left:320px;width: 400px;">
			<form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
				<div class="form-group">

					<label for="category">Name</label>
					<input asp-for="Name" class="form-control" id="inputText" style="color:white" maxlength="1000" />
					<span class="text-danger" asp-validation-for="Name"></span>
				</div>
				<button type="submit" class="btn btn-primary me-2">Submit</button>
				<a asp-action="Index" class="btn btn-outline-primary mt-3" style="margin-bottom: 1pc;">← Back</a>
			</form>
		</div>

	</div>
</div>