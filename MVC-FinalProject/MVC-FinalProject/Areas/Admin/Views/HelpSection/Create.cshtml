@model HelpSectionCreate

<div class="main-panel">
	<div class="content-wrapper" style="width: 65pc;">
		<div class="container" style="margin-top:100px;margin-left:320px;width: 400px;">
			<form class="forms-sample" asp-action="Create" method="post">
				<div class="form-group">
					<label for="category">Phone Number</label>
					<input asp-for="PhoneNumber" class="form-control" id="inputText" style="color:white" maxlength="100" />
					<span class="text-danger" asp-validation-for="PhoneNumber"></span>
				</div>
				<div class="form-group">
					<label for="category">Customer Service Hours</label>
					<input asp-for="CustomerServiceHours" class="form-control" id="inputText" style="color:white" maxlength="1000" />
					<span class="text-danger" asp-validation-for="CustomerServiceHours"></span>
				</div>
				<div class="form-group">
					<label for="category">Is Weekend Closed</label>
					<div class="form-check">
						<input asp-for="IsWeekendClosed" class="form-check-input" type="radio" value="true" id="weekendClosedTrue">
						<label class="form-check-label" for="weekendClosedTrue">Yes</label>
					</div>
					<div class="form-check">
						<input asp-for="IsWeekendClosed" class="form-check-input" type="radio" value="false" id="weekendClosedFalse">
						<label class="form-check-label" for="weekendClosedFalse">No</label>
					</div>
					<span class="text-danger" asp-validation-for="IsWeekendClosed"></span>
				</div>

				<button type="submit" class="btn btn-primary me-2">Submit</button>
				<a asp-action="Index" class="btn btn-outline-primary mt-3" style="margin-bottom: 1pc;">← Back</a>
			</form>
		</div>

	</div>
</div>