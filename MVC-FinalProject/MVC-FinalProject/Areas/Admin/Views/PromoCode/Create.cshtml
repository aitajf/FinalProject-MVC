@model PromoCodeCreate

@{
    ViewData["Title"] = "Promocode";
}

<div class="main-panel">
    <div class="content-wrapper" style="width: 65pc;">
<form asp-action="Create" method="post">
   <div asp-validation-summary="All" class="text-danger"></div> 

    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DiscountPercent"></label>
        <input asp-for="DiscountPercent" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="UsageLimit"></label>
        <input asp-for="UsageLimit" type="number" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
    </div>
</div>
