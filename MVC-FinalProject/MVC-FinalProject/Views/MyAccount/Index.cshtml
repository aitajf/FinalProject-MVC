										<div class="my-account-account-details">

											<!-- Email Change Form -->
											<form asp-action="ChangeEmail" method="post" class="edit-account">
												@Html.AntiForgeryToken()
												<fieldset>
													<legend>Change Email</legend>
													<p class="form-row">
														<label>New Email</label>
														<input name="NewEmail" class="input-text form-control" autocomplete="off" />
													</p>
													<p class="form-row">
														<button type="submit" class="button btn btn-primary">Save Email</button>
													</p>
												</fieldset>
												@if (TempData["EmailMessage"] != null)
												{
													<div class="alert alert-info">@TempData["EmailMessage"]</div>
												}
											</form>

											<hr />

											<!-- Username Change Form -->
											<form asp-action="ChangeUsername" method="post" class="edit-account mt-4">
												@Html.AntiForgeryToken()
												<fieldset>
													<legend>Change Username</legend>
													<p class="form-row">
														<label>New Username</label>
														<input name="NewUsername" class="input-text form-control" autocomplete="off" />
													</p>
													<p class="form-row">
														<button type="submit" class="button btn btn-primary">Save Username</button>
													</p>
												</fieldset>
												@if (TempData["UsernameMessage"] != null)
												{
													<div class="alert alert-info">@TempData["UsernameMessage"]</div>
												}
											</form>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
