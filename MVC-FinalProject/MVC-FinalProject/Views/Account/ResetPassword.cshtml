@model UserPassword

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Joifurn | Reset Your Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">

    <link href="~/vertical/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/vertical/assets/css/icons.min.css" rel="stylesheet" />
    <link href="~/vertical/assets/css/theme.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f2ede7;
            font-family: 'Segoe UI', sans-serif;
        }

        .reset-wrapper {
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

        .form-title {
            color: #4e342e;
            font-size: 24px;
            font-weight: 600;
        }

        .form-group label {
            font-weight: 500;
            color: #6d4c41;
        }

        .btn-primary {
            background-color: #8d6e63;
            border-color: #8d6e63;
        }

            .btn-primary:hover {
                background-color: #6d4c41;
                border-color: #6d4c41;
            }

        .text-muted a:hover {
            color: #4e342e !important;
        }

        .img-cover {
            object-fit: cover;
            height: 100%;
            width: 100%;
        }
    </style>
</head>
<body>

    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="row w-100">
            <div class="col-lg-10 mx-auto">
                <div class="reset-wrapper d-flex flex-column flex-lg-row">
                    <!-- Left Image -->
                    <div class="col-lg-6 p-0 d-none d-lg-block">
                        <img src="~/assets/images/furniture-reset.jpg" alt="Furniture Image" class="img-cover">
                    </div>

                    <!-- Right Form -->
                    <div class="col-lg-6 p-5 d-flex flex-column justify-content-center">
                        <div class="text-center mb-4">
                            <a href="/Shop/Index/" class="text-dark font-weight-bold form-title">Joifurn Password Reset</a>
                        </div>
                        <h5 class="mb-3 text-center">Welcome back!</h5>

                        <form asp-action="ResetPassword" method="post">
                            <input type="hidden" name="Email" value="@Model.Email" />
                            <input type="hidden" name="Token" value="@Model.Token" />

                            <div class="form-group">
                                <label for="Password">New Password</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="Password" name="Password" required />
                                    <div class="input-group-append">
                                        <span class="input-group-text" onclick="togglePasswordVisibility('Password', 'togglePasswordIcon1')">
                                            <i class="fa fa-eye" id="togglePasswordIcon1"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="ConfirmPassword">Confirm Password</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required />
                                    <div class="input-group-append">
                                        <span class="input-group-text" onclick="togglePasswordVisibility('ConfirmPassword', 'togglePasswordIcon2')">
                                            <i class="fa fa-eye" id="togglePasswordIcon2"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary px-4">Submit</button>
                            </div>
                        </form>

                        <div class="text-center mt-4">
                            <p class="text-muted mb-0">
                                Don't have an account?
                                <a href="/Register/CreateAppUser/" class="text-muted font-weight-medium ml-1"><b>Register Now</b></a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function togglePasswordVisibility(inputId, iconId) {
            var field = document.getElementById(inputId);
            var icon = document.getElementById(iconId);
            if (field.type === "password") {
                field.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                field.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }
    </script>

    <script src="~/vertical/assets/js/jquery.min.js"></script>
    <script src="~/vertical/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/vertical/assets/js/theme.js"></script>
</body>
</html>
