@model UserPassword

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Joifurn | Reset Your Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Marcellus&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- Styles -->
    <link href="~/vertical/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/vertical/assets/css/icons.min.css" rel="stylesheet" />
    <link href="~/vertical/assets/css/theme.min.css" rel="stylesheet" />

    <style>
        :root {
            --primary-color: #a8957e;
            --text-color: #333333;
            --bg-color: #f8f5f1;
            --border-color: #e5e0d5;
        }

        body {
            background-color: var(--bg-color);
            font-family: 'Jost', sans-serif;
            color: var(--text-color);
            margin: 0;
            padding: 0;
        }

        .logo {
            font-family: 'Marcellus', serif;
            font-size: 28px;
            letter-spacing: 1px;
            margin-bottom: 40px;
            color: var(--primary-color) !important;
        }

        .reset-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .reset-wrapper {
            background-color: #fff;
            border-radius: 0;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            overflow: hidden;
            max-width: 1000px;
            width: 100%;
            display: flex;
            flex-direction: row;
        }

        .form-side {
            padding: 60px;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .form-container {
            width: 100%;
            max-width: 350px;
        }

        .image-side {
            flex: 1;
            display: none;
        }

            .image-side img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .form-title {
            font-size: 32px;
            font-weight: 400;
            color: var(--text-color);
            font-family: 'Marcellus', serif;
            margin-bottom: 10px;
        }

        .form-subtitle {
            font-size: 16px;
            color: #777;
            margin-bottom: 40px;
            font-weight: 300;
        }

        .form-group {
            margin-bottom: 25px;
            position: relative;
        }

            .form-group label {
                color: var(--text-color);
                font-weight: 400;
                font-size: 14px;
                margin-bottom: 8px;
                display: block;
            }

        .form-control {
            height: 24px;
            border: 1px solid var(--border-color);
            border-radius: 0;
            padding: 10px 45px 10px 15px;
            font-size: 14px;
            background-color: transparent;
            width: 82%;
        }

            .form-control:focus {
                box-shadow: none;
                border-color: var(--primary-color);
            }

        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #777;
            z-index: 10;
        }

            .password-toggle:hover {
                color: var(--primary-color);
            }

        .input-group {
            position: relative;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            padding: 12px 20px;
            border-radius: 0;
            font-weight: 400;
            font-size: 14px;
            letter-spacing: 1px;
            height: 50px;
            text-transform: uppercase;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #8a7966;
                border-color: #8a7966;
            }

        .text-muted {
            color: #777 !important;
            font-size: 14px;
        }

            .text-muted a {
                color: var(--primary-color);
                text-decoration: none;
                font-weight: 500;
            }

                .text-muted a:hover {
                    color: #8a7966 !important;
                }
    </style>
</head>
<body>
    <div class="reset-container">
        <div class="reset-wrapper">
            <!-- Right form -->
            <div class="form-side">
                <div class="form-container">
                    <div class="text-center">
                        <a href="/Shop/Index/" class="logo text-decoration-none">JOIFURN</a>
                        <h1 class="form-title">Reset Password</h1>
                        <p class="form-subtitle">Create a new secure password for your account</p>
                    </div>

                    <form asp-action="ResetPassword" method="post">
                        <input type="hidden" name="Email" value="@Model.Email" />
                        <input type="hidden" name="Token" value="@Model.Token" />

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <div>@error.ErrorMessage</div>
                                }
                            </div>
                        }

                        <!-- form-group: Password -->
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <div class="input-group">
                                <input asp-for="Password" class="form-control" id="Password" />
                                <span class="password-toggle" onclick="togglePasswordVisibility('Password', 'togglePasswordIcon1')">
                                    <i class="fa fa-eye" id="togglePasswordIcon1"></i>
                                </span>
                            </div>
                        </div>

                        <!-- form-group: ConfirmPassword -->
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <div class="input-group">
                                <input asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword" />
                                <span class="password-toggle" onclick="togglePasswordVisibility('ConfirmPassword', 'togglePasswordIcon2')">
                                    <i class="fa fa-eye" id="togglePasswordIcon2"></i>
                                </span>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary w-100">RESET PASSWORD</button>
                        </div>

                        <div class="text-center mt-4">
                            <p class="text-muted mb-0">
                                Don't have an account?
                                <a asp-controller="Account" asp-action="Register">Register Now</a>
                            </p>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

    <script>
        function togglePasswordVisibility(inputId, iconId) {
            var field = document.getElementById(inputId);
            var icon = document.getElementById(iconId);
            if (field.type === "password") {
                field.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                field.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }
    </script>

    <script src="~/vertical/assets/js/jquery.min.js"></script>
    <script src="~/vertical/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/vertical/assets/js/theme.js"></script>
</body>
</html>