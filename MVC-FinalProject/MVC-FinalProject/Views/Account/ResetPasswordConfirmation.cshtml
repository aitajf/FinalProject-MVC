@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Joifurn | Password Reset Sent</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Marcellus&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- Styles -->
    <link href="~/vertical/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/vertical/assets/css/icons.min.css" rel="stylesheet" />
    <link href="~/vertical/assets/css/theme.min.css" rel="stylesheet" />

    <style>
        :root {
            --primary-color: #a8957e;
            --text-color: #333333;
            --bg-color: #f8f5f1;
            --border-color: #e5e0d5;
        }

        body {
            background-color: var(--bg-color);
            font-family: 'Jost', sans-serif;
            color: var(--text-color);
            margin: 0;
            padding: 0;
        }

        .logo {
            font-family: 'Marcellus', serif;
            font-size: 28px;
            letter-spacing: 1px;
            margin-bottom: 40px;
            color: var(--primary-color) !important;
        }

        .confirmation-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .confirmation-wrapper {
            background-color: #fff;
            border-radius: 0;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            overflow: hidden;
            max-width: 1000px;
            width: 100%;
            display: flex;
            flex-direction: row;
        }

        .content-side {
            padding: 60px;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .content-container {
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        .image-side {
            flex: 1;
            display: none;
        }

            .image-side img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .message-header {
            font-size: 32px;
            font-weight: 400;
            color: var(--text-color);
            font-family: 'Marcellus', serif;
            margin-bottom: 20px;
        }

        .message-text {
            font-size: 16px;
            color: #777;
            margin-bottom: 40px;
            font-weight: 300;
            line-height: 1.6;
        }

        .success-icon {
            width: 80px;
            height: 80px;
            background-color: var(--primary-color);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;
        }

            .success-icon i {
                color: white;
                font-size: 32px;
            }

        .btn-outline-primary {
            background-color: transparent;
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
            padding: 12px 30px;
            border-radius: 0;
            font-weight: 400;
            font-size: 14px;
            letter-spacing: 1px;
            text-transform: uppercase;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

            .btn-outline-primary:hover {
                background-color: var(--primary-color);
                border-color: var(--primary-color);
                color: white;
            }

        .additional-info {
            margin-top: 30px;
            padding-top: 30px;
            border-top: 1px solid var(--border-color);
        }

            .additional-info p {
                font-size: 14px;
                color: #999;
                margin-bottom: 10px;
            }

            .additional-info a {
                color: var(--primary-color);
                text-decoration: none;
                font-weight: 500;
            }

                .additional-info a:hover {
                    color: #8a7966;
                }

        .message-header {
            font-size: 24px;
        }

        .success-icon {
            width: 60px;
            height: 60px;
        }

            .success-icon i {
                font-size: 24px;
            }

        }
    </style>
</head>
<body>
    <div class="confirmation-container">
        <div class="confirmation-wrapper">
            <!-- Right content -->
            <div class="content-side">
                <div class="content-container">
                    <a asp-controller="Shop" asp-action="Index" class="logo text-decoration-none">JOIFURN</a>

                    <div class="success-icon">
                        <i class="fas fa-envelope"></i>
                    </div>

                    <h1 class="message-header">Email Sent</h1>

                    <p class="message-text">
                        If your email address exists in our system, you will receive a password reset link shortly. Please check your inbox and follow the instructions.
                    </p>

                    <a asp-controller="Account" asp-action="Login" class="btn-outline-primary">
                        BACK TO LOGIN
                    </a>            
                </div>
            </div>
        </div>
    </div>

    <script>
        function resendEmail() {
            // Add resend functionality here
            alert('Resend functionality would be implemented here');
        }
    </script>

    <script src="~/vertical/assets/js/jquery.min.js"></script>
    <script src="~/vertical/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/vertical/assets/js/theme.js"></script>
</body>
</html>