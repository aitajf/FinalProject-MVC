@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Joifurn | Password Reset Sent</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            background-color: #f3f0ec;
            font-family: 'Segoe UI', sans-serif;
        }

        .confirmation-wrapper {
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
            overflow: hidden;
        }

        .brand-title {
            color: #4e342e;
            font-size: 24px;
            font-weight: 700;
        }

        .message-header {
            font-size: 20px;
            font-weight: 600;
            color: #5d4037;
        }

        .message-text {
            color: #6d4c41;
            font-size: 16px;
        }

        .btn-link:hover {
            text-decoration: underline;
        }

        .img-cover {
            object-fit: cover;
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>

    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="row w-100">
            <div class="col-lg-10 mx-auto">
                <div class="confirmation-wrapper d-flex flex-column flex-lg-row">
                    <!-- Left Image -->
                    <div class="col-lg-6 p-0 d-none d-lg-block">
                        <img src="~/assets/images/furniture-reset.jpg" alt="Furniture" class="img-cover">
                    </div>

                    <!-- Right Content -->
                    <div class="col-lg-6 p-5 d-flex flex-column justify-content-center">
                        <div class="text-center mb-4">
                            <a asp-controller="Shop" asp-action="Index" class="text-dark brand-title">Joifurn</a>
                        </div>
                        <h5 class="message-header text-center mb-3">Password Reset Link Sent</h5>
                        <p class="message-text text-center mb-4">
                            If your email address exists in our system, you will receive a password reset link shortly.
                        </p>

                        <div class="text-center">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-dark mt-2">Back to Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>




